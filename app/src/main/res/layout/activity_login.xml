<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/scheme1PrimaryColor">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:background="@drawable/custom_edittext">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LOGIN"
                android:id="@+id/loginText"
                android:textSize="@dimen/h4"
                android:fontFamily="@font/ttfors"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/scheme1PrimaryColor"/>

                <EditText
                    android:id="@+id/etUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_edittext"
                    android:drawableLeft="@drawable/profile"
                    android:drawablePadding="8dp"
                    android:hint="Username"
                    android:padding="8dp"
                    android:textColor="@color/scheme1PrimaryColor"
                    android:layout_marginTop="40dp"/> />

                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_edittext"
                    android:drawableLeft="@drawable/key"
                    android:drawablePadding="8dp"
                    android:hint="Password"
                    android:padding="8dp"
                    android:inputType="textPassword"
                    android:textColor="@color/scheme1PrimaryColor"
                    android:layout_marginTop="20dp"/>/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Login"
                    android:onClick="loginUser"
                    android:textSize="18sp"
                    android:layout_marginTop="30dp"
                    android:textColor="@color/scheme1SecondaryColor"
                    android:backgroundTint="@color/scheme1PrimaryColor"
                    app:cornerRadius = "20dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Not yet registered? SignUp Now"
        android:textSize="@dimen/p3"
        android:textAlignment="center"
        android:id="@+id/signupText"
        android:textColor="@color/scheme1SecondaryColor"
        android:layout_marginBottom="20dp"/>
</LinearLayout>